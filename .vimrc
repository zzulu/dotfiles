set encoding=utf-8

syntax on

set wrap
set linebreak
set number
set ruler

set history=1000

set undofile
set undodir=~/.vim/.undodir/

set showcmd
set showmode

set autoread

set noswapfile
set nobackup
set nowb

set autoindent
set smartindent
set smarttab
set expandtab

set shiftwidth=2
set softtabstop=2
set tabstop=2

set hlsearch
set incsearch
